.tab-pane#Owner
    for d in data.goods
        - if (d.type !=='Find Lost')
            .well
                h3 #{d.title}
                p
                    strong Name: 
                    |#{d.name}
                p
                    strong Goods: 
                    |#{d.good}
                p
                    strong Type: 
                    |#{d.type}
                p
                    strong Location: 
                    |#{d.location}
                p.last-info
                    strong Message: 
                    |#{d.message}
                    a(href=`#comment${d.id}`,data-toggle="collapse",aria-expanded="false",aria-controls=`#comment${d.id}`) Comment
                .collapse(id = `comment${d.id}`)
                    .line
                    ul.comment
                        for comment in d.comments
                            li #{comment.msg}
                    .input-group
                        input(type="text",placeholder="Comment some...",id = `input-comment${d.id}`).form-control
                        span.input-group-btn
                            button(id = `btn-comment${d.id}`).btn.btn-default Go